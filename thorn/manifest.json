{
  "manifest_version": 2,
  "name": "Replace th with Þ",
  "version": "1.0",
  "description": "Replaces 'th' with 'Þ' on web pages",
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
